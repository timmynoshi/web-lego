<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="container- text-center">
            <div class="row">
                <img src="~/image/header-footer-image-top.png" class="image-fluid">
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="container- text-center">
            <div class="row">
                <img src="~/image/header-footer-image-bottom.png" class="image-fluid">
            </div>
        </div>
    </footer>
</body>
</html>

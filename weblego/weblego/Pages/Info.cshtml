@page
@model InfoModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Info</title>
    <link href="~/css/info.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div id="div-logo" align="center">
            <img src="~/image/lego-logo.png" id="logo">
        </div>
        <div id="div-tt" align="center">
            Info
        </div>
        <div id="div-form-signin">
            <form class="row g-3" method="post">
                <div class="col-12">
                    <label for="inputname" class="form-label" id="lb">Name</label>
                    <input type="text" class="form-control" name="TenND" value="@Model.TenND">
                </div>
                <div class="col-12">
                    <label for="inputusername" class="form-label" id="lb">Username</label>
                    <input type="text" class="form-control" name="TaiKhoan" value="@Model.TaiKhoan" readonly>
                </div>
                <div class="col-12">
                    <label for="inputphone" class="form-label" id="lb">Phone number</label>
                    <input type="text" class="form-control" name="SDT" value="@Model.SDT">
                </div>
                <div class="col-12">
                    <label for="inputaddress" class="form-label" id="lb">Address</label>
                    <input type="text" class="form-control" name="DiaChi" value="@Model.DiaChi">
                </div>

                <div class="col-12" align="center">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
